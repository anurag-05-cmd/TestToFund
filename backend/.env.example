# Backend environment example
PORT=3001
# For development we're using an SQLite file. Update path if needed.
DB_PATH=./database/dev.sqlite
# Optionally set a Postgres connection string (e.g. Supabase). If present, Postgres will be used.
# Example: postgresql://postgres:password@db.host:5432/database
DATABASE_URL=
# If your provider requires SSL, set DB_SSL=true
DB_SSL=false

# RPC and private key for server-side token transfers (only set in secure envs)
RPC_URL=
PRIVATE_KEY=
TOKEN_ADDRESS=
JWT_SECRET=change_this_in_production
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
